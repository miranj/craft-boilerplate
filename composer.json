{
  "name": "miranj/craft-boilerplate",
  "description": "A Craft CMS 5 starter project by Miranj",
  "keywords": [
    "craft",
    "cms",
    "craftcms",
    "project",
    "miranj"
  ],
  "license": "MIT",
  "homepage": "https://miranj.in/",
  "type": "project",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "craftcms/ckeditor": "^4.1",
    "craftcms/cms": "~5.2.0",
    "marionnewlevant/twig-perversion": "^5.0",
    "miranj/craft-obfuscator": "^1.2",
    "mmikkel/child-me": "^2.2",
    "mmikkel/cp-field-inspect": "^2.0",
    "mmikkel/retcon": "^3.1",
    "nystudio107/craft-minify": "^5.0",
    "nystudio107/craft-typogrify": "^5.0",
    "spacecatninja/imager-x": "^5.0",
    "topshelfcraft/environment-label": "^5.0",
    "ttempleton/craft-nocache": "^3.0",
    "vaersaagod/seomate": "^3.0@beta",
    "verbb/element-index-defaults": "^4.0",
    "verbb/field-manager": "^4.0",
    "verbb/image-resizer": "^4.0",
    "vlucas/phpdotenv": "^5.6",
    "yiisoft/yii2-redis": "^2.0"
  },
  "require-dev": {
    "craftcms/generator": "^2.0.0",
    "craftcms/phpstan": "dev-main",
    "yiisoft/yii2-shell": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "boilerplate\\": "src/"
    }
  },
  "config": {
    "allow-plugins": {
      "craftcms/plugin-installer": true,
      "yiisoft/yii2-composer": true
    },
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "8.2"
    }
  },
  "scripts": {
    "phpstan": "phpstan --memory-limit=1G -c phpstan.neon",
    "post-create-project-cmd": [
      "@php -r \"copy('.env.example', '.env');\"",
      "@php -r \"unlink('composer.json');\"",
      "@php -r \"unlink('LICENSE');\"",
      "@php -r \"unlink('README.md');\"",
      "@php -r \"rename('README.md.default', 'README.md');\"",
      "@php -r \"unlink('CHANGELOG.md');\"",
      "@php -r \"rename('CHANGELOG.md.default', 'CHANGELOG.md');\"",
      "@php -r \"unlink('field-library');\"",
      "@php -r \"rename('composer.json.default', 'composer.json');\"",
      "@composer dump-autoload -o"
    ]
  }
}
