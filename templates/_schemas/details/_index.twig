{% extends '_schemas/details/_default' %}

{% if indexPaginate %}
  {% set numberOfItems = indexPaginate ? indexPaginateInfo.total : indexEntries|length %}
{% endif %}

{% set schemaProps = schemaProps ?? {
  title: indexTitle ?? entry.title,
  url: indexUrl ?? entry.url ?? null,
  listItems: indexEntries ?? null,
  numberOfItems: numberOfItems ?? null,
} %}



{% block entry_schema %}
  {% from '_schemas/definitions/itemList' import itemList %}
  {% do graph.add(itemList(schemaProps)) %}
  
  {{ parent() }}
{% endblock %}
