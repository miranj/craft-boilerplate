{% extends "_schemas/details/default" %}



{% set schemaProps = schemaProps ?? {} %}
{% set schemaProps = {
  authors: [entry.author]|map(person => {
    name: person.name,
    url: person['web'] ?? person['url'],
    type: 'person',
  })
}|merge(schemaProps) %}



{% block entry_schema %}
  {% from '_schemas/definitions/blogPosting' import blogPosting %}
  {% do graph.add(blogPosting(schemaProps)) %}
  
  {{ parent() }}
{% endblock %}
